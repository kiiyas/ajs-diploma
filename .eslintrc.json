{
  "env": {
      "browser": true,
      "es6": true,
      "jest": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
  },
  "rules": {
      "no-restricted-syntax": [
          "error",
          "LabeledStatement",
          "WithStatement"
      ],
      "linebreak-style": 0,
      "max-classes-per-file": ["error", 20],
      "no-use-before-define": ["error", { "functions": false, "classes": false }],
      "no-param-reassign": 0,
      "no-alert": "off",
      "max-len": ["error", { "code": 250 }],
      "import/no-named-as-default": 0,
      "no-new": 0
  },
  "parser": "babel-eslint"
}